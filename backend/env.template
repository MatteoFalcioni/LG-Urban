# Database (Docker defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chat

# Application DB URL (async driver for runtime)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/chat

# Alembic migrations DB URL (sync driver only, for migrations)
ALEMBIC_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/chat

# OpenAI / LLM
OPENAI_API_KEY=sk-...

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LLM Context Window (default 30k)
CONTEXT_WINDOW=2000

