# Database (Docker defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chat

# Application DB URL (async driver for runtime)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/chat

# Alembic migrations DB URL (sync driver only, for migrations)
ALEMBIC_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/chat

# OpenAI / LLM
OPENAI_API_KEY=sk-...
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.7

# Google Maps API (for geocoding in SIT tools)
GOOGLE_MAPS_API_KEY=AIza...

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LLM Context Window (default 30k)
CONTEXT_WINDOW=30000

# Sandbox Configuration
SANDBOX_IMAGE=sandbox:latest
SESSION_STORAGE=TMPFS
TMPFS_SIZE_MB=1024
DATASET_ACCESS=HYBRID
HYBRID_LOCAL_PATH=/heavy_llm_data
SESSIONS_ROOT=./sessions
BLOBSTORE_DIR=./blobstore
SANDBOX_NETWORK=langgraph-network
MAX_ARTIFACT_SIZE_MB=50

# Artifact Storage & Security
ARTIFACTS_SECRET=fixed-secret-key-for-development
ARTIFACTS_TOKEN_TTL_SECONDS=86400

# API Key Encryption
# Optional: Set this for production/cloud deployments with external secrets management
# If not set, a key will be auto-generated and persisted to disk on first run
